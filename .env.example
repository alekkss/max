# ===========================================
# Конфигурация бота LaVita yarn
# ===========================================
# Скопируйте этот файл в .env и заполните своими значениями

# API конфигурация Max.ru
API_TOKEN=your_api_token_here
BASE_URL=https://platform-api.max.ru

# Идентификаторы
SUPPORT_CHAT_ID=-70567921197084
BOT_ID=161374093

# База данных
DATABASE_PATH=lavita_bot.db

# Настройки long polling
POLLING_TIMEOUT=30
POLLING_REQUEST_TIMEOUT=35

# Режим отладки (true/false)
DEBUG=false

# Задержки между запросами (секунды)
MESSAGE_DELAY=0.3
ERROR_RETRY_DELAY=5
